{
    "name": "{{name}}",
    "version": "0.1.0",
    "private": true,
    "main": "./build/electron-ts-build/main.js",
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint",
        "buildElectron": "webpack",
        "watch": "tsc --build tsconfig.electron.json -w",
        "dev": "concurrently \" npm run watch \" \" cross-env BROWSER=none npm run serve \" \" wait-on http://localhost:8080 && nodemon --watch . --exec \\\"electron .\\\"\"",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "prepack": "npm run build && tsc --build tsconfig.electron.json && npm run buildElectron",
        "predist": "npm run build && tsc --build tsconfig.electron.json && npm run buildElectron"
    },
    "dependencies": {
        "core-js": "^3.6.5",
        "vue": "^3.0.0-0",
        "vue-router": "^4.0.0-0",
        "electron-is-dev": "^1.2.0"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "~4.5.0",
        "@vue/cli-plugin-router": "~4.5.0",
        "@vue/cli-plugin-typescript": "~4.5.0",
        "@vue/cli-service": "~4.5.0",
        "@vue/compiler-sfc": "^3.0.0-0",
        "node-sass": "^4.12.0",
        "sass-loader": "^8.0.2",
        "typescript": "~3.9.3",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.2",
        "electron": "^10.1.3",
        "electron-builder": "^22.8.1",
        "nodemon": "^2.0.4",
        "wait-on": "^5.2.0",
        "webpack-cli": "^3.3.12"
    },
    "author": {
        "name": "{{author}}"
    },
    "homepage": "./",
    "build": {
        "appId": "{{appId}}",
        "productName": "{{productName}}",
        "copyright": "Copyright Â© 2020 year ${author}",
        "extends": null,
        "files": [
            "build/**/*",
            "node_modules/**/*",
            "settings/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "extraMetadata": {
            "main": "./build/main.js"
        },
        "mac": {
            "category": "pubilc.app-category.productivity",
            "artifactName": "${productName}-${version}-${arch}.${ext}",
            "icon": "assets/icon.ico"
        },
        "win": {
            "target": [
                "msi",
                "nsis"
            ],
            "icon": "assets/icon.ico",
            "artifactName": "${productName}-Web-Setup-${version}.${ext}",
            "publisherName": "akitasummer"
        },
        "nsis": {
            "allowToChangeInstallationDirectory": true,
            "oneClick": false,
            "perMachine": false
        }
    }
}
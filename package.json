{
    "name": "{{name}}",
    "version": "0.1.0",
    "private": true,
    "main": "main.js",
    "description": "{{description}}",
    "dependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "electron-is-dev": "^1.2.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-scripts": "3.4.3"
    },
    "scripts": {
        "start": "react-app-rewired start",
        "build": "react-app-rewired build",
        "buildElectron": "webpack",
        "test": "react-app-rewired test",
        "eject": "react-app-rewired eject",
        "dev": "concurrently \" wait-on http://localhost:3000 && nodemon --watch . --exec \\\"electron .\\\"\" \" cross-env BROWSER=none npm start \"",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "prepack": "npm run build && npm run buildElectron",
        "predist": "npm run build && npm run buildElectron"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@pmmmwh/react-refresh-webpack-plugin": "^0.4.2",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.2",
        "customize-cra": "^1.0.0",
        "electron": "^10.1.3",
        "electron-builder": "^22.8.1",
        "nodemon": "^2.0.4",
        "react-app-rewired": "^2.1.6",
        "react-refresh": "^0.8.3",
        "wait-on": "^5.2.0",
        "webpack-cli": "^3.3.12"
    },
    "author": {
        "name": "{{author}}"
    },
    "homepage": "./",
    "build": {
        "appId": "",
        "productName": "",
        "copyright": "Copyright Â© 2020 year ${author}",
        "extends": null,
        "files": [
            "build/**/*",
            "node_modules/**/*",
            "settings/**/*",
            "package.json"
        ],
        "directories": {
            "buildRwsources": "assets"
        },
        "extraMetadata": {
            "main": "./build/main.js"
        },
        "publish": [
            "github"
        ],
        "mac": {
            "category": "pubilc.app-category.productivity",
            "artifactName": "${productName}-${version}-${arch}.${ext}"
        },
        "dmg": {
            "background": "assets/appdmg.png",
            "icon": "assets/icon.icns",
            "iconSize": 100,
            "contents": [{
                    "x": 380,
                    "y": 280,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 110,
                    "y": 280,
                    "type": "file"
                }
            ],
            "window": {
                "width": 500,
                "height": 500
            }
        },
        "win": {
            "target": [
                "msi",
                "nsis"
            ],
            "icon": "assets/icon.ico",
            "artifactName": "${productName}-Web-Setup-${version}.${ext}",
            "publisherName": "akitasummer"
        },
        "nsis": {
            "allowToChangeInstallationDirectory": true,
            "oneClick": false,
            "perMachine": false
        }
    }
}
{
    "name": "{{name}}",
    "version": "0.1.0",
    "private": true,
    "description": "{{description}}",
    "main": "./build/electron-ts-build/main.js",
    "dependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "@types/jest": "^24.0.0",
        "@types/node": "^12.0.0",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.9.0",
        "electron-is-dev": "^1.2.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-scripts": "3.4.3",
        "typescript": "^3.8.3"
    },
    "scripts": {
        "start": "react-app-rewired start",
        "build": "react-app-rewired build",
        "test": "react-app-rewired test",
        "eject": "react-app-rewired eject",
        "buildElectron": "webpack",
        "watch": "tsc --build tsconfig.electron.json -w",
        "dev": "concurrently \" npm run watch \" \" cross-env BROWSER=none npm start \" \" wait-on http://localhost:3000 && nodemon --watch . --exec \\\"electron .\\\"\"",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "prepack": "npm run build && tsc --build tsconfig.electron.json && npm run buildElectron",
        "predist": "npm run build && tsc --build tsconfig.electron.json && npm run buildElectron"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@pmmmwh/react-refresh-webpack-plugin": "^0.4.2",
        "@types/testing-library__dom": "^7.5.0",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.2",
        "customize-cra": "^1.0.0",
        "electron": "^10.1.3",
        "electron-builder": "^22.8.1",
        "nodemon": "^2.0.4",
        "react-app-rewired": "^2.1.6",
        "react-refresh": "^0.8.3",
        "wait-on": "^5.2.0",
        "webpack-cli": "^3.3.12"
    },
    "author": {
        "name": "{{author}}"
    },
    "homepage": "./",
    "build": {
        "appId": "{{appId}}",
        "productName": "{{productName}}",
        "copyright": "Copyright Â© 2020 year ${author}",
        "extends": null,
        "files": [
            "build/**/*",
            "node_modules/**/*",
            "settings/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "extraMetadata": {
            "main": "./build/main.js"
        },
        "mac": {
            "category": "pubilc.app-category.productivity",
            "artifactName": "${productName}-${version}-${arch}.${ext}",
            "icon": "assets/icon.ico"
        },
        "win": {
            "target": [
                "msi",
                "nsis"
            ],
            "icon": "assets/icon.ico",
            "artifactName": "${productName}-Web-Setup-${version}.${ext}",
            "publisherName": "akitasummer"
        },
        "nsis": {
            "allowToChangeInstallationDirectory": true,
            "oneClick": false,
            "perMachine": false
        }
    }
}